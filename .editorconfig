# editorconfig.org
root = true

[*]
indent_size = 4
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
tab_width = 4
indent_size = 4

[*.html]
tab_width = 2
indent_size = 2

[Makefile]
indent_size = 4
tab_width = 4
indent_style = tab

[*.md]
trim_trailing_whitespace = false

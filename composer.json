{
    "name": "ifomin/php-http",
    "description": "Source code",
    "type": "project",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "8.1.11"
    },
    "license": "BSD-3-Clause",

    "autoload": {
        "psr-4": {
            "App\\" : "src/App",
            "Framework\\": "src/Framework"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Test\\App\\" : "tests/App",
            "Test\\Framework\\": "tests/Framework"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "tests": "phpunit --colors=always"
    }

}
